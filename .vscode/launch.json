{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Weather Agent Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/agents/weather/src/server.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/agents/weather/.venv/bin/python",
      "cwd": "${workspaceFolder}/agents/weather",
      "env": {
        "HOST": "0.0.0.0",
        "PORT": "8123",
        "WEATHER_MCP_URI": "http://localhost:8000/mcp"
      }
    },
    {
      "name": "Debug Weather MCP Tool",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/weather/weather.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/tools/weather/.venv/bin/python",
      "cwd": "${workspaceFolder}/tools/weather",
      "env": {
        "HOST": "0.0.0.0",
        "PORT": "8000",
        "KEYCLOAK_URL": "http://localhost:8080",
        "KEYCLOAK_REALM": "demo",
        "OPENWEATHER_API_KEY": "${env:OPENWEATHER_API_KEY}"
      }
    }
  ]
}
